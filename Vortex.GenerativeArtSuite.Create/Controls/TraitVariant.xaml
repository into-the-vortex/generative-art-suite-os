<UserControl x:Class="Vortex.GenerativeArtSuite.Create.Controls.TraitVariant"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:controls="clr-namespace:Vortex.GenerativeArtSuite.Create.Controls"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:vms="clr-namespace:Vortex.GenerativeArtSuite.Create.ViewModels.Traits.Base"
             d:DataContext="{d:DesignInstance vms:ITraitVariantVM}"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <ui:SimpleStackPanel Spacing="10" Orientation="Horizontal">
        <controls:TraitImageControl DataContext="{Binding Trait}" />
        <controls:TraitImageControl DataContext="{Binding Mask}" />
    </ui:SimpleStackPanel>
</UserControl>
